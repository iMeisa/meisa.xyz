{{template "base" .}}

{{define "title"}}F1 Setup Helper{{end}}

{{define "content"}}
    <div class="container">
        <table class="table table-dark table-aero">
            <tbody>
            <tr>aero</tr>
            </tbody>
        </table>

        <table class="table table-dark table-transmission">
            <tbody>
            <tr>transmission</tr>
            </tbody>

        </table>

        <table class="table table-dark table-suspension-geo">
            <tbody>
            <tr>sus-geo</tr>
            </tbody>

        </table>

        <table class="table table-dark table-suspension">
            <tbody>
            <tr>
                <td>Front Suspension</td>
                <td>
                    <div class="progress">
                        <div class="progress-bar" style="width: 20%"></div>
                        <div class="progress-bar increase-setup" style="width: 10%"></div>
                        <div class="progress-bar decrease-setup" style="width: 10%"></div>
                    </div>
                    2 -> 1
                </td>
                <td>Soft 1 - 11 Firm</td>
            </tr>
            </tbody>
        </table>

        <table class="table table-dark table-brakes">
            <tbody>
            <tr>brakes</tr>
            </tbody>

        </table>

        <table class="table table-dark table-tires">
            <tbody>
            <tr>tires</tr>
            </tbody>

        </table>
    </div>
{{end}}


